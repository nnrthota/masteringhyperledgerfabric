//Add company1 Peers to transportchannel Channel
curl -s -X POST \
  http://localhost:6000/joinPeers \
  -H "content-type: application/json" \
  -d '{
	"channelName":"transportchannel",
  "userName": "company1Client",
  "orgName": "company1",
	"peers": ["company1-peer"]
}'



